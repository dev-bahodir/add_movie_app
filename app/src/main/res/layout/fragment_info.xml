<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InfoFragment">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center|left"
        android:background="#66D6EF"
        android:paddingLeft="30dp"
        android:text="Movie name"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mavie_name"
        android:layout_marginTop="40dp"
        android:text="Movie name"
        android:gravity="center|left"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:paddingLeft="20dp"
        android:layout_width="330dp"
        android:layout_height="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv" />

    <TextView
        android:id="@+id/mavie_authors"
        android:layout_marginTop="20dp"
        android:text="Movie authors"
        android:gravity="center|left"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:layout_width="330dp"
        android:layout_height="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mavie_name" />

    <TextView
        android:id="@+id/about_movie"
        android:layout_marginTop="20dp"
        android:text="About movie"
        android:gravity="center|top|left"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:layout_width="330dp"
        android:layout_height="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mavie_authors" />

    <TextView
        android:id="@+id/mavie_date"
        android:layout_marginTop="20dp"
        android:text="Movie date"
        android:gravity="center|left"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:layout_width="330dp"
        android:layout_height="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_movie" />

    <Button
        android:id="@+id/save"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Close"
        android:textAllCaps="false"
        android:background="@drawable/backs"
        app:layout_constraintEnd_toEndOf="@id/mavie_date"
        app:layout_constraintTop_toBottomOf="@id/mavie_date"
        android:layout_width="140dp"
        android:layout_height="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>